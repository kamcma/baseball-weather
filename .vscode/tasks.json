{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "swift",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false
        },
        {
            "label": "test mac",
            "type": "shell",
            "command": "swift",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": false
        },
        {
            "label": "test linux",
            "type": "shell",
            "command": "docker",
            "args": [
                "run", "--rm",
                "--volume", "$(pwd):/package",
                "--workdir", "/package",
                "kylef/swiftenv:latest",
                "bash", "-c",
                "\"apt-get update && apt-get install libssl-dev -y && swiftenv install -s && swift test\""
            ],
            "group": "test",
            "isBackground": false
        },
        {
            "label": "lint",
            "type": "shell",
            "command": "swiftlint",
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^([^:]+):(\\d+):(?:(\\d+):)? (error|warning): (.+) \\((.+)\\)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "isBackground": false
        }
    ]
}
