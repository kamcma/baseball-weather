{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "type": "shell",
            "command": "swift",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false
        },
        {
            "taskName": "test",
            "type": "shell",
            "command": "swift",
            "args": [
                "test"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "isBackground": false
        },
        {
            "taskName": "lint",
            "type": "shell",
            "command": "swiftlint",
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^([^:]+):(\\d+):(?:(\\d+):)? (error|warning): (.+) \\((.+)\\)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "isBackground": false
        }
    ]
}